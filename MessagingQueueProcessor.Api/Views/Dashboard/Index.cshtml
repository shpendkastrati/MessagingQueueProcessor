@model MessagingQueueProcessor.Api.Models.Metrics.DashboardViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>System Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 2rem;
        }

        h1 {
            color: #333;
        }

        .metric {
            margin-bottom: 1rem;
        }

            .metric span {
                font-weight: bold;
            }
    </style>
</head>
<body>
    <h1>System Dashboard</h1>

    <div class="metric">
        <span>Processed Messages:</span> @Model.ProcessedMessages
    </div>
    <div class="metric">
        <span>Error Count:</span> @Model.ErrorCount
    </div>
    <div class="metric">
        <span>Queue Depth:</span> @Model.QueueDepth
    </div>
</body>
</html>
